<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/firstColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bạn muốn uống gì hôm nay?"
            android:textColor="@color/thirdColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!--Category-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/CategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_bg3_stroke3"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:tag="All"
                android:text="All"
                android:textColor="@color/firstColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:tag="ca-phe"
                android:text="Cà phê" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:tag="tra"
                android:text="Trà" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:tag="cloud"
                android:text="Cloud" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:tag="hi-tea"
                android:text="Hi-Tea Healthy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:tag="tra-xanh"
                android:text="Trà xanh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:tag="da-xay"
                android:text="Đá xay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_corner_bg1_stroke1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:tag="snack"
                android:text="Bánh &amp; Snack" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/productListContent"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/thirdColor"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@id/navigationBottomLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderLayout"
        app:layout_constraintVertical_bias="0.0">


        <!-- Item of category -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productListRecView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>