<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_corner_bg3_stroke3"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/itemCheckoutImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/firstColor"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/itemCheckoutNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/firstColor"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/itemCheckoutOptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product option description"
                android:textSize="12sp"
                android:textColor="@color/firstColor"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/itemCheckoutQuantityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SL: "
                android:textColor="@color/firstColor"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/itemCheckoutTotalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000.000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/firstColor"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>