<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/rounded_corner_bg1_stroke1"
    android:backgroundTint="@color/secondColor"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category name"
            android:textColor="@color/thirdColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/productItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name name name name name"
            android:textColor="@color/thirdColor"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/productItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX.XXX Ä‘"
            android:textSize="20sp" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/itemProductImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/thirdColor"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>


</LinearLayout>